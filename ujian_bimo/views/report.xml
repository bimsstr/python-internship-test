<odoo>
    <data>
        <record id="action_report_barang" model="ir.actions.report">
            <field name="name">Cetak Barang PDF</field>
            <field name="model">latihan.barang</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">nama_modul_kamu.report_barang_template</field>
            <field name="report_file">nama_modul_kamu.report_barang_template</field>
            <field name="binding_model_id" ref="model_latihan_barang"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_barang_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2>Laporan Barang</h2>
                            <p>Nama Barang: <span t-field="o.name"/></p>
                            <p>Harga: <span t-field="o.harga"/></p>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>