<odoo>
  <data>

    <record id="view_project_form_inherit_iht" model="ir.ui.view">
      <field name="name">project.project.form.inherit.iht</field>
      <field name="model">project.project</field>
      <field name="inherit_id" ref="project.edit_project"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='partner_id']" position="after">
            <separator string="Info Tambahan (Soal Tes)"/>
            <field name="lokasi_proyek"/>
            <field name="source_aplikasi_pendukung" widget="url"/>
            <field name="daftar_pekerja_remote"/>
        </xpath>
      </field>
    </record>

    <record id="view_project_tree_inherit_iht" model="ir.ui.view">
      <field name="name">project.project.tree.inherit.iht</field>
      <field name="model">project.project</field>
      <field name="inherit_id" ref="project.view_project"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='partner_id']" position="after">
            <field name="lokasi_proyek" optional="show"/>
            <field name="source_aplikasi_pendukung" optional="hide"/>
            <field name="daftar_pekerja_remote" optional="show"/>
        </xpath>
      </field>
    </record>

  </data>
</odoo>